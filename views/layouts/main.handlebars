	<script type="text/javascript">
		// changes opacity of the icon on hover
		$(".eat-icon").hover(function() {
			$(this).css({opacity: 0.5});
		},
		function() {
			$(this).css({opacity: 1});
		});
		$(".trash-icon").hover(function() {
			$(this).css({opacity: 0.5});
		},
		function() {
			$(this).css({opacity: 1});
		});
	</script>
	
