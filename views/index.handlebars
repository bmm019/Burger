<div class="row">

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<h3 class="heading">MENU</h3>
        {{#each burgers}} 
        	{{#unless this.devoured}} 
		        <form class="change-devoured">
		        	{{this.burger_name}}
		            <input type="hidden" name="eat" value="true">
		            <input type="image" class="eat-icon" src="assets/img/eat.png" alt="eat icon"/>
		        </form>
        	{{/unless}} 
        {{/each}}
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<img src="/assets/img/burger.png" class="img-responsive" alt="burger">
        <h3 class="heading">CUSTOM BURGER</h3>
        <form class="create-form">
            <div class="form-group">
                <input type="text" id="ca" name="name" placeholder="Burger name">
                <button type="submit" class="btn btn-outline-secondary">Submit</button>
            </div>
        </form>
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<h3 class="heading">EATEN</h3>
        <div class="list-group">
            {{#each burgers}} 
            	{{#if this.devoured}}
            		<form class="delete-form form-group">
            			{{this.burger_name}}
            			<input type="image" class="trash-icon" src="assets/img/trash.png" alt="trash icon"/>
					</form>
            	{{/if}} 
            {{/each}}
        </div>
    </div>
</div>